/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  box-sizing: border-box;
  padding: 20rpx;
}

.main {
  padding-bottom: 40rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05)
}

.main .main-image {
  box-sizing: border-box;
  padding: 10rpx;
  width: 100%;
}

.main .main-info,
.main .main-text,
.main .main-date {
  padding: 0 20rpx;
}

.main .main-info {
  margin-top: -20rpx;
}

.main .main-info .vol {
  font-size: 26rpx;
  color: #999;
}

.main .main-text {
  margin-top: 40rpx;
}
 
.main .main-text .content {
  font-size: 32rpx;
  color: #111;
}

.main .main-date {
  margin-top: 20rpx;
}

.main .main-date .date-text {
  float: right;
  font-size: 26rpx;
  color: #999;
}