/**index.wxss**/
page {
  color: #444;
}
.navigator-hover {
  background: none;
  opacity: 1;
}
image {
  vertical-align: top;
}
view,
text {
  line-height: 1;
}
view {
  padding: 0;
}
.clearfix::after,
.clearfix::before {
  content: '';
  display: table;
  clear: both;
}
.clearfix {
  zoom: 1;
}
.container {
  box-sizing: border-box;
}
.main {
  padding-bottom: 140rpx;
}
.banner {
  height: 375rpx;
}
.banner .slide-image {
  width: 750rpx;
  height: 375rpx;
}
.classify {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}
.classify .classify-item {
  padding: 20rpx 0;
  flex-grow: 1;
  text-align: center;
}
.classify .classify-item .item-icon {
  width: 80rpx;
  height: 80rpx;
}
.classify .classify-item .item-title {
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
}
.divider-line {
  height: 14rpx;
  background: #e6e6e6;
  border-bottom: 1rpx solid #f5f5f5;
}
.multi-cell {
  padding: 4rpx 0;
  background: #fff;
}
.multi-cell .cell-item {
  width: 373rpx;
}
.multi-cell .cell-item .item-img {
  width: 100%;
  vertical-align: top;
}
.multi-cell .cell-item:nth-child(1) {
  float: left;
}
.multi-cell .cell-item:nth-child(1) .item-img {
  height: 530rpx;
}
.multi-cell .cell-item:nth-child(2),
.multi-cell .cell-item:nth-child(3) {
  float: right;
}
.multi-cell .cell-item:nth-child(2) .item-img,
.multi-cell .cell-item:nth-child(3) .item-img {
  height: 260rpx;
}
.multi-cell .cell-item:nth-child(2) {
  margin-bottom: 10rpx;
}
.programa-banner {
  width: 750rpx;
  padding: 0;
}
.programa-banner .banner-img {
  width: 100%;
}
.programa-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.programa-list .list-item {
  margin-top: 4rpx;
  width: 372rpx;
}
.programa-list .list-item .item-img {
  width: 100%;
  height: 372rpx;
}
.programa-list .list-item .item-info {
  padding: 24rpx;
}
.programa-list .list-item .info-title {
  font-size: 30rpx;
}
.programa-list .list-item .info-dec {
  margin: 10rpx 0 10rpx 0;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.54);
}
.programa-list .list-item .info-price {
  display: flex;
  align-items: flex-end;
}
.programa-list .list-item .price-current {
  font-size: 30rpx;
  color: #ea625b;
}
.programa-list .list-item .price-dec {
  margin: 0 4rpx 0;
  color: #ea625b;
}
.programa-list .list-item .price-old {
  text-decoration: line-through;
  color: rgba(0, 0, 0, 0.54);
}
.programa-list .list-item .price-dec,
.programa-list .list-item .price-old {
  font-size: 24rpx;
}
